@{
	ViewData["Title"] = "Login Page";
}


<div class="container mt-4">
	<h2>Condominium List - Welcome @ViewBag.User.Name</h2>
	<a class="btn btn-primary" asp-area="" asp-controller="Condo" asp-action="Main">Back</a>
	<a class="btn btn-primary" asp-area="" asp-controller="Condo" asp-action="Create">Add Condominium</a>
	<hr />
	<div class="row justify-content-center">
		@foreach (var condominium in ViewBag.Condominium)
		{
			<div class="col-md-4">
				<div class="card shadow-lg p-4">
					<img src="@condominium.Photo" style="width:22rem;height:18rem">
					<h2 class="text-center mb-4">@condominium.Name</h2>
					<div class="text-center mt-3">Count: @condominium.Count</div>
					<div class="text-center mt-3">Address: @condominium.Address</div>
				</div>
			</div>
		}
	</div>
</div>

